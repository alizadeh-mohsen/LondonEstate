@page
@using System.Reflection
@using System.ComponentModel.DataAnnotations
@using LondonEstate.ViewModels
@model EstimateRentModel
@{
    ViewData["Title"] = "Estimate Rent";
    Layout = "_LayoutFront";
}

<div class="container">

    <form method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <div class="mb-2">
            @* <label asp-for="Customer.Name" class="form-label">Name</label> *@
            <input asp-for="Estimation.Name" placeholder="Name" class="form-control" />
        </div>

        <div class="row g-3 mb-2">
            <div class="col-4">
                @* <label asp-for="Customer.CountryCode" class="form-label">Country code</label> *@
                <select asp-for="Estimation.CountryCode" class="form-select">

                    @* <option value="+44"></option> *@
                    @foreach (var country in Model.CountryList)
                    {
                        <option value="@country.Prefix">
                            @country.Text
                        </option>
                    }
                </select>
                <span asp-validation-for="Estimation.CountryCode" class="text-danger"></span>
            </div>
            <div class="col-8">
                <input asp-for="Estimation.Phone" placeholder="Phone *" class="form-control" />
                <span asp-validation-for="Estimation.Phone" class="text-danger small"></span>
            </div>
        </div>

        <div class="mb-2">
            <input asp-for="Estimation.Email" placeholder="Email *" type="email" class="form-control" />
            <span asp-validation-for="Estimation.Email" class="text-danger small"></span>
        </div>
        <div class="mb-2">
            <input asp-for="Estimation.Address" class="form-control" placeholder="Address *" />
            <span asp-validation-for="Estimation.Address" class="text-danger"></span>
        </div>
        <div class="row g-2">
            <div class="col-md-6">
                <select asp-for="Estimation.NumberOfBeds" class="form-select">
                    <option value="" class="text-muted">No. of beds</option>
                    @foreach (var v in Enum.GetValues(typeof(LondonEstate.Utils.Enums.NumberOfBeds)).Cast<LondonEstate.Utils.Enums.NumberOfBeds>())
                    {
                        var member = v.GetType().GetMember(v.ToString()).First();
                        var displayAttr = member.GetCustomAttributes(typeof(DisplayAttribute), false)
                        .OfType<DisplayAttribute>()
                        .FirstOrDefault();
                        var label = displayAttr?.GetName() ?? v.ToString();
                        <option value="@( (int)v )">@label</option>
                    }
                </select>
                <span asp-validation-for="Estimation.NumberOfBeds" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-2">
                <input asp-for="Estimation.SquareMeter" placeholder="Size *" type="number" class="form-control" />
                <span asp-validation-for="Estimation.SquareMeter" class="text-danger"></span>
            </div>
        </div>
        <fieldset class="border p-3 mb-2">
            <div class="mb-2">
                <label for="ImageFiles" class="form-label">Upload Images (Multiple)</label>
                <input id="ImageFiles" name="ImageFiles" type="file" accept="image/*" multiple class="form-control" />
               
                <div class="form-text">You can select multiple images at once. Maximum 5 images.</div>
                <span asp-validation-for="ImageFiles" class="text-danger"></span>
            </div>

            <div class="mt-2">
                <h6 class="fw-medium mb-2">Preview</h6>
                <div id="imagePreviewContainer" class="row g-2"></div>
            </div>
        </fieldset>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                REQUEST ESTIMATION
            </button>
            <a href="/" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.getElementById('ImageFiles').addEventListener('change', function(e) {
            const files = e.target.files;
            const container = document.getElementById('imagePreviewContainer');
            container.innerHTML = '';

            if (files.length > 5) {
                alert('Maximum 5 images allowed');
                this.value = '';
                return;
            }

            for (let i = 0; i < files.length; i++) {
                const file = files[i];

                if (!file.type.startsWith('image/')) {
                    continue;
                }

                const reader = new FileReader();
                reader.onload = function(event) {
                    const col = document.createElement('div');
                    col.className = 'col-md-3 col-sm-4 col-6';

                    const card = document.createElement('div');
                    card.className = 'card';

                    const img = document.createElement('img');
                    img.src = event.target.result;
                    img.className = 'card-img-top';
                    img.style.height = '200px';
                    img.style.objectFit = 'cover';
                    img.alt = file.name;

                    const cardBody = document.createElement('div');
                    cardBody.className = 'card-body p-2';

                    const fileName = document.createElement('small');
                    fileName.className = 'text-muted d-block text-truncate';
                    fileName.textContent = file.name;
                    fileName.title = file.name;

                    cardBody.appendChild(fileName);
                    card.appendChild(img);
                    card.appendChild(cardBody);
                    col.appendChild(card);
                    container.appendChild(col);
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
}