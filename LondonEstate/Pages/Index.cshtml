@page
@using System.Reflection
@using System.ComponentModel.DataAnnotations
@using LondonEstate.ViewModels
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container my-4">

    @if (TempData["SuccessMessage"] is string success)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @success
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    else if (TempData["ErrorMessage"] is string error)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @error
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>


            <div class="mb-3">
                @* <label asp-for="Customer.Name" class="form-label">Name</label> *@
                <input asp-for="Customer.Name" placeholder="Name" class="form-control" />
            </div>

            <div class="row g-3 mb-3">
                <div class="col-4">
                    @* <label asp-for="Customer.CountryCode" class="form-label">Country code</label> *@
                    <select asp-for="Customer.CountryCode" class="form-select">

                        @* <option value="+44"></option> *@
                        @foreach (var country in Model.CountryList)
                        {
                            <option value="@country.Prefix">
                                @country.Text
                            </option>
                        }
                    </select>
                    <span asp-validation-for="Customer.CountryCode" class="text-danger"></span>
                </div>
                <div class="col-8">
                    <input asp-for="Customer.Phone" placeholder="Phone" class="form-control" />
                    <span asp-validation-for="Customer.Phone" class="text-danger small"></span>
                </div>
            </div>

            <div class="mb-3">
                <input asp-for="Customer.Email" placeholder="Email" type="email" class="form-control" />
                <span asp-validation-for="Customer.Email" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <input asp-for="Property.Address" class="form-control" placeholder="Address" />
                <span asp-validation-for="Property.Address" class="text-danger"></span>
            </div>
            <div class="row g-2">
                <div class="col-md-6">
                    <select asp-for="Property.NumberOfBeds" class="form-select">
                    <option value="" class="text-muted">No. of beds</option>
                        @foreach (var v in Enum.GetValues(typeof(LondonEstate.Utils.Enums.NumberOfBeds)).Cast<LondonEstate.Utils.Enums.NumberOfBeds>())
                        {
                            var member = v.GetType().GetMember(v.ToString()).First();
                            var displayAttr = member.GetCustomAttributes(typeof(DisplayAttribute), false)
                            .OfType<DisplayAttribute>()
                            .FirstOrDefault();
                            var label = displayAttr?.GetName() ?? v.ToString();
                            <option value="@( (int)v )">@label</option>
                        }
                    </select>
                    <span asp-validation-for="Property.NumberOfBeds" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <input asp-for="Property.SquareMeter" placeholder="Size" type="number"  class="form-control" />
                    <span asp-validation-for="Property.SquareMeter" class="text-danger"></span>
                </div>
            </div>
        <fieldset class="border p-3 mb-3">
            <legend class="text-muted">Upload images</legend>
            <div class="mb-3">
                <input id="ImageFile" name="ImageFile" placeholder="Upload image" type="file" accept="image/*" class="form-control" />
            </div>
            <div class="mt-2">
                <div class="fw-medium mb-2">Preview</div>
                <img id="imgPreview" src="#" alt="preview" style="display:none; max-height:300px;" class="img-fluid" />
            </div>
        </fieldset>
        <div>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        (function () {
            const input = document.getElementById('ImageFile');
            const preview = document.getElementById('imgPreview');

            input?.addEventListener('change', function (e) {
                const file = input.files && input.files[0];
                if (!file) {
                    preview.style.display = 'none';
                    preview.src = '#';
                    return;
                }

                const reader = new FileReader();
                reader.onload = function (ev) {
                    preview.src = ev.target.result;
                    preview.style.display = 'block';
                };
                reader.readAsDataURL(file);
            });
        })();
    </script>
}