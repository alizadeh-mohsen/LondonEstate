@page
@using System.Reflection
@using System.ComponentModel.DataAnnotations
@using LondonEstate.ViewModels
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container my-4">

  @*   @if (TempData["SuccessMessage"] is string success)
