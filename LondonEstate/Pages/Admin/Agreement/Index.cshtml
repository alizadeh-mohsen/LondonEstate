@page
@model IndexModel
@{
    ViewData["Title"] = "Guest Agreement Generator";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0">Guest Agreement Generator</h2>
                    
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-danger" role="alert">
                            @Model.Message
                        </div>
                    }

                    <form method="post">
                        @* <h5 class="border-bottom pb-2 mb-2">Company Information</h5> *@
                        
                        <div class="mb-2">
                            <label for="CompanyName" class="form-label">
                                <strong>Company Name:</strong>
                            </label>
                            <input type="text" 
                                   class="form-control" 
                                   id="CompanyName" 
                                   asp-for="AgreementViewModel.CompanyName" 
                                   @* placeholder="e.g., ABC Properties Ltd"  *@
                                   required />
                        </div>

                        <div class="mb-2">
                            <label for="OwnerName" class="form-label">
                                <strong>Host/Owner Name:</strong>
                            </label>
                            <input type="text"
                                   class="form-control"
                                   id="OwnerName"
                                   asp-for="AgreementViewModel.OwnerName"
                                   @* placeholder="e.g., Jane Doe"  *@
                                   required />
                        </div>
                        @* <h5 class="border-bottom pb-2 mb-2 mt-4">Payment Details</h5> *@

                        <div class="row">
                            <div class="col-md-6 mb-2">
                                <label for="SortCode" class="form-label">
                                    <strong>Sort Code:</strong>
                                </label>
                                <input type="text" 
                                       class="form-control" 
                                       id="SortCode" 
                                       asp-for="AgreementViewModel.SortCode" 
                                       @* placeholder="e.g., 12-34-56"  *@
                                       required />
                            </div>

                            <div class="col-md-6 mb-2">
                                <label for="Account" class="form-label">
                                    <strong>Account Number:</strong>
                                </label>
                                <input type="text" 
                                       class="form-control" 
                                       id="Account" 
                                       asp-for="AgreementViewModel.Account" 
                                       @* placeholder="e.g., 12345678"  *@
                                       required />
                            </div>
                        </div>

                      


                        @* <h5 class="border-bottom pb-2 mb-2 mt-4">Dates</h5> *@

                        <div class="row">
                            <div class="col-md-4 mb-2">
                                <label for="Today" class="form-label">
                                    <strong>  Agreement Date:</strong>
                                </label>
                                <input type="date" 
                                       class="form-control" 
                                       id="Date" 
                                       asp-for="AgreementViewModel.Date" 
                                       required />
                            </div>

                            <div class="col-md-4 mb-2">
                                <label for="CheckInDate" class="form-label">
                                    <strong>   Check-in Date:</strong>
                                </label>
                                <input type="date" 
                                       class="form-control" 
                                       id="CheckInDate" 
                                       asp-for="AgreementViewModel.CheckInDate" 
                                       required />
                            </div>

                            <div class="col-md-4 mb-2">
                                <label for="CheckOutDate" class="form-label">
                                    <strong>  Check-out Date:</strong>
                                </label>
                                <input type="date" 
                                       class="form-control" 
                                       id="CheckOutDate" 
                                       asp-for="AgreementViewModel.CheckOutDate" 
                                       required />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-2">
                                <label for="Deposit" class="form-label">
                                    <strong>Security Deposit (£):</strong>
                                </label>
                                <input type="text"
                                       class="form-control"
                                       id="Deposit"
                                       asp-for="AgreementViewModel.Deposit"
                                       @* placeholder="e.g., 100"  *@
                                       required />
                            </div> <div class="col-md-6 mb-2">
                                <label for="Rent" class="form-label">
                                    <strong> Rent (£):</strong>
                                </label>
                                <input type="text"
                                       class="form-control"
                                       id="Rent"
                                       asp-for="AgreementViewModel.Rent"
                                       @* placeholder="e.g., 250.00"  *@
                                       required />
                            </div>


                        </div>

                        @* <h5 class="border-bottom pb-2 mb-2 mt-4">Guest & Host Information</h5> *@

                        <div class="mb-2">
                            <label for="GuestName" class="form-label">
                                <strong> Guest Name:</strong>
                            </label>
                            <input type="text"
                                   class="form-control"
                                   id="GuestName"
                                   asp-for="AgreementViewModel.GuestName"
                                   @* placeholder="e.g., John Smith"  *@
                                   required />
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-file-earmark-pdf"></i> Generate PDF Agreement
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
