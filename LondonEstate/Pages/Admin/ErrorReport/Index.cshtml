@page
@model IndexModel

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Error Logs</h2>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Message</th>
                <th>Area</th>
                <th>Created</th>
                <th style="width:150px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ErrorLogs)
            {
                <tr>
                    <td>@item.Message</td>
                    <td>@item.Area</td>
                    <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <a asp-page="Details" asp-route-id="@item.Id">Details</a>
                        @* <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a> *@
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="text-danger" >Delete</a>


                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>